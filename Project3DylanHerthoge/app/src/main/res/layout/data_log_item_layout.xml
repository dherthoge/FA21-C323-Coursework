<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dataLogItemTitleTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/dataLogItemPriorityImgView"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/dataLogItemPriorityImgView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/low_priority" />

            <TextView
                android:id="@+id/dataLogItemDateTxtView"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="#222222"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/dataLogItemPriorityImgView"
                app:layout_constraintTop_toBottomOf="@+id/dataLogItemTitleTxtView" />

            <TextView
                android:id="@+id/dataLogItemTimestampTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="#222222"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/dataLogItemPriorityImgView"
                app:layout_constraintTop_toBottomOf="@+id/dataLogItemDateTxtView" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>